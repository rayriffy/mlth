---
import Base from '$layout/base.astro'
import IdolMini from '$components/IdolMini.astro'

import { getIdols } from '$functions/getIdols'

const idols = await getIdols()
---

<Base>
  <ul
    class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-8 gap-4 md:gap-8 justify-center"
  >
    {idols.map(idol => <IdolMini id={idol.id} />)}
  </ul>
</Base>
